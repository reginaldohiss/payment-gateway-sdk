{
  "name": "reginaldohiss/payment-gateway-sdk",
  "description": "SDK PHP para integração com múltiplos provedores de pagamento, incluindo suporte a Pix, Boleto e Cartão de Crédito.",
  "keywords": ["pagamento", "sdk", "pix", "boleto", "cartão de crédito", "api", "php"],
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Reginaldo da Conceição Silva",
      "email": "reginaldosilvas2001@gmail.com"
    }
  ],
  "require": {
    "php": ">=8.0",
    "ext-json": "*",
    "ext-curl": "*"
  },
  "autoload": {
    "psr-4": {
      "PaymentGateway\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "PaymentGateway\\Tests\\": "tests/"
    }
  },
  "require-dev": {
    "phpunit/phpunit": "^10.0",
    "squizlabs/php_codesniffer": "^3.7"
  },
  "scripts": {
    "test": "vendor/bin/phpunit",
    "cs-check": "vendor/bin/phpcs",
    "cs-fix": "vendor/bin/phpcbf"
  },
  "config": {
    "sort-packages": true
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}
